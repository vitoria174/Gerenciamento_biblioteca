class Biblioteca:
    def __init__(self):
        self.Lista_livro = []
        self.id_livro = 0
        
    def cadastrar_livro(self, titulo, autor, ano, genero, quantidade):
        self.id_livro += 1 
        titulolivro = titulo
        autorlivro = autor
        anolivro = ano
        generolivro = genero
        quantidadelivro = quantidade
        
        self.Lista_livro.append ({"N째 Cadastro":int(self.id_livro),"Titulo":titulo, "Autor":autor, "Ano": ano, "Genero":genero, "Quantidade":quantidade})
        
    def listar_todos_livros(self):
        print(self.Lista_livro)
        
    def atualizar_livro(self):
        id_livro_atualizacao = int(input("n째 de cadastro: "))
        inicio = 0
        fim = len(self.Lista_livro)-1
        
        while inicio <= fim:
            meio = (inicio + fim)//2
            livro_meio = self.Lista_livro[meio]
            
            if livro_meio['N째 Cadastro'] == id_livro_atualizacao:
                novo_titulo = str(input("Titulo: "))
                novo_autor = str(input("Autor: "))
                novo_ano = str(input("Ano: "))
                novo_genero = str(input("Genero: "))
                
                atualizacao_livro = {"Titulo":novo_titulo,"Autor":novo_autor,"Ano":novo_ano,"Genero":novo_genero}
                self.Lista_livro[meio].update(atualizacao_livro)
                return   
            elif livro_meio['N째 Cadastro'] < id_livro_atualizacao:
                inicio = meio + 1 
            else:
                fim = meio -1

u = Biblioteca()
u.cadastrar_livro('alquimista','paulo coellho', '2001', 'fantasia', 4)
u.cadastrar_livro('livro1','autor1 ','2010', 'romance', 5)
u.cadastrar_livro('livro2','autor2 ','2012', 'acao', 8)
u.listar_todos_livros()
u.atualizar_livro()
u.listar_todos_livros()        
